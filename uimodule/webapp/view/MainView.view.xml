 <mvc:View controllerName="com.novigo.gttui.controller.MainView"
  displayBlock="true"
  xmlns="sap.m"
  xmlns:l="sap.ui.layout"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:u="sap.ui.unified">
  <App id="idAppControl" >
    <pages>
      <Page title="{i18n>title}">
        <content>
          <l:VerticalLayout>
		        <u:FileUploader
            id="fileUploader"
            name="myFileUpload"
            uploadUrl="upload/"
            tooltip="Upload your file to the local server"
            uploadComplete="handleUploadComplete"
            icon="sap-icon://upload" iconFirst="true" style="Emphasized" change="onUpload"/>
	        </l:VerticalLayout>
        </content>
      </Page>
    </pages>
  </App>
</mvc:View>